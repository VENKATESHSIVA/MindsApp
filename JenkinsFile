
pipeline{
   agent {
    docker {
      image 'maven:3.6.3-jdk-11'
      args '-v /root/.m2:/root/.m2'
    }
    }
  environment{
        flag = ''
    }
  stages {

    stage("Maven Build"){
          steps{
             script{
                flag=env.STAGE_NAME
               }
              sh 'mvn -B -DskipTests clean package'
             
          }
        
      }
      stage('Maven Test'){
            steps{
               script{
                  flag=env.STAGE_NAME
            }
                sh 'mvn test'
            }
            post{
            always{
                junit 'target/surefire-reports/*.xml'
            }
        }
        }
          
                
          stage("Deployee"){
           when {
                expression {
                        currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
                steps{
                   script{
                    flag=env.STAGE_NAME
                }
                     rtUpload (
                         serverId: 'sample-jfrog',
                     spec :'''{
                             "files": [
                                      {
                                     "pattern": "target/*.jar",
                                     "target": "art-mindsapp/${env.BUILD_NUMBER}/"
                                    }
                                ]
                            }'''
                        )
                    }
            post{
                success{
                    echo "========Deploying executed successfully ${params.buildnumber}========"
                    

                }
                
                failure{
                    echo "========Deploying stage execution failed========"
                }
            }
        }
        stage("Download"){
           when {
                expression {
                        currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
                steps{
     
                     
            rtDownload (
                         serverId: 'sample-jfrog',
                     spec :'''{
                             "files": [
                                      {
                                      "pattern": "art-mindsapp/${params.buildnumber}/*.jar",
                                      "target": "bazinga/"
                                    }
                                ]
                            }'''
                        )
                    }
            post{
                success{
                    echo "========Download executed successfully========"
                    }
                
                failure{
                    echo "========Download stage execution failed========"
                }
            }
        }
        stage("deploy to ec2"){
       steps{
            sshagent(['b056d3cf-80dc-4e5b-b47a-7c6353b80cbd']){
                    sh 'scp -r /var/jenkins_home/workspace/MindsApp-samp/target/*.jar ec2-user@34.232.214.248:/home/ec2-user/artifact'
        }
       }
     }
        
    }
     post{
        always{
            echo "========Running on ========"
        }
        changed{
                    echo "========Their is change in Packaging from pervious${params.buildnumber}========"
                }
        success{
            echo "========pipeline executed successfully ${flag}  ========"
        }
        failure{
             emailext attachLog: true, body: "<b> Pipeline is failed on ${flag} </b> <br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL of build: ${env.BUILD_URL}", compressLog: true, subject: 'Pipeline Failed in :', to: 'venkateshshiva12345@gmail.com '
             echo "========pipeline execution failed  ${flag}========"
        }
    }
}
